    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="vite" type="Integer" array="False" size=""/>
            <assign variable="vite" expression="3"/>
            <declare name="magicnumber" type="Integer" array="False" size=""/>
            <assign variable="magicnumber" expression="10"/>
            <declare name="num1" type="Integer" array="False" size=""/>
            <output expression="&quot;Inserisci il numero magico: &quot;" newline="True"/>
