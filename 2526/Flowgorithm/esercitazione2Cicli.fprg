                <input variable="num1"/>
            </while>
            <if expression="vite == 0">
                <then>
                    <output expression="&quot;Hai perso tutte le vite a disposizione&quot;" newline="True"/>
                </then>
                <else>
                    <output expression="&quot;Hai vinto!!! utilizzando &quot; &amp; contatore &amp; &quot; tentativi&quot;" newline="True"/>
                    <output expression="&quot;Sei pronto per il prossimo livello :) &quot;" newline="True"/>
